<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiEXIFApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiEXIFApp"
    Title="EXIF App"
    x:DataType="local:MainViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="{Binding MauiVersion, StringFormat='MauiVersion: {0}'}" />
            <Button Command="{Binding PickPhotoAndShowExifCommand}" Text="Pick Photo" />
            <Label Text="{Binding FileName, StringFormat='FileName: {0}'}" />
            <Image
                Aspect="AspectFit"
                HeightRequest="250"
                Source="{Binding FilePath}" />
            <Label Text="{Binding ExifText}" />
            <Label Text="{Binding MessageText}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
